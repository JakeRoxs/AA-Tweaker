<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#6F878787"/>
            <corners
                android:radius="19dp" />
            <padding
                android:left="4dp"
                android:top="2dp"
                android:right="4dp"
                android:bottom="2dp" />
            <gradient
                android:angle="90"
                android:startColor="#154A09"
                android:endColor="#133212"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#454545"/>
            <corners
                android:radius="19dp" />
            <padding
                android:left="4dp"
                android:top="2dp"
                android:right="4dp"
                android:bottom="2dp" />
            <gradient
                android:angle="180"
                android:startColor="#4C4E4E"
                android:endColor="#737373"/>
        </shape>
    </item>
</selector>