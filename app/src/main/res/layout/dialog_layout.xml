<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="18dp">


            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:textColor="@color/dialog_text_color"
                android:textSize="17sp"
                android:typeface="sans"/>

        <VideoView
            android:id="@+id/tutorialVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="27.5dp"
            android:fitsSystemWindows="true"
            android:layout_marginBottom="4dp"/>

        <ImageView
            android:id="@+id/tutorialimage1"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"/>

            <ImageView
                android:id="@+id/tutorialimage2"
                android:layout_width="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"/>

            <ImageView
                android:id="@+id/tutorialimage3"
                android:layout_width="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"/>

        <EditText
            android:id="@+id/textuxprototype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/uxprototype_dialog"
            android:textSize="16sp"
            android:visibility="gone"
            android:autofillHints=""
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:textAlignment="viewEnd">

        <Button
            android:visibility="gone"
            android:id="@+id/yes"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:visibility="gone"
                android:id="@+id/no"
                android:layout_margin="30dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@android:string/cancel"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
